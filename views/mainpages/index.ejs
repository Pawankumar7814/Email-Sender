<body>
    <div class="container">
        <div class="card">
            <div class="container">
                <h1>Contact me</h1>
                <form action="/Sendmail" method="post">
                    <div class="mb-3">
                        <label for="formGroupExampleInput" class="form-label">Name</label>
                        <input type="text" class="form-control" name="uname" id="formGroupExampleInput" placeholder="Name">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Email</label>
                        <input type="text" class="form-control" name="uemail" id="formGroupExampleInput2" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Contact</label>
                        <input type="text" class="form-control" name="uphone" id="formGroupExampleInput2" placeholder="Contact">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Enter Message</label>
                        <input type="text" class="form-control" name="umessage" id="formGroupExampleInput2" placeholder="Message...">
                    </div>
                    <input type="submit" value="Submit">
                </form>
            </div>
        </div>
    </div>
</body>

</html>